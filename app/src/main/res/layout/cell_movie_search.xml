<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:id="@+id/coordinatorLayout">

    <View
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/shadow"
        android:layout_height="0dp"
        android:background="@color/white"
        />

    <View
        android:id="@+id/infoMovie"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="160dp"
        android:background="#ddc9b4"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:elevation="8dp"
        android:outlineProvider="bounds"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        android:id="@+id/posterMovie"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@+id/infoMovie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/infoMovie"
        android:layout_marginBottom="16dp"
        app:layout_constraintDimensionRatio="3:4"
        android:layout_marginStart="16dp"
        tools:targetApi="lollipop"/>

    <TextView
        android:textColor="@color/white"
        android:textSize="12sp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/background_popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popularity"
        app:layout_constraintStart_toEndOf="@+id/posterMovie"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        tools:text="@sample/movies.json/data/popularity"
        app:layout_constraintTop_toBottomOf="@+id/yearMovie"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/titleMovie"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/posterMovie"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="16dp"
        tools:text="@sample/movies.json/data/title"
        app:layout_constraintTop_toBottomOf="@+id/popularity"
        android:layout_marginTop="12dp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        app:layout_constraintTop_toBottomOf="@+id/titleMovie"
        android:numStars="5"
        android:rating="2"
        app:layout_constraintStart_toEndOf="@+id/posterMovie"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:isIndicator="false"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voteCount"
        app:layout_constraintStart_toEndOf="@+id/voteAverage"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/titleMovie"
        tools:text="@sample/movies.json/data/vote_count"
        app:layout_constraintBaseline_toBaselineOf="@+id/voteAverage"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voteAverage"
        tools:text="@sample/movies.json/data/vote_average"
        app:layout_constraintStart_toEndOf="@+id/rating"
        app:layout_constraintTop_toTopOf="@+id/rating"
        app:layout_constraintBottom_toBottomOf="@+id/rating"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/overview"
        app:layout_constraintTop_toBottomOf="@+id/infoMovie"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        tools:text="@sample/movies.json/data/overview"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yearMovie"
        android:textStyle="bold"
        android:background="@drawable/background_release_date"
        android:textColor="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        tools:text="@sample/movies.json/data/release_date"
        app:layout_constraintTop_toTopOf="@+id/posterMovie"
        app:layout_constraintStart_toEndOf="@+id/posterMovie"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"/>

    <View
        android:id="@+id/shadow"
        android:layout_width="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/toolbar_shadow"
        app:layout_constraintTop_toBottomOf="@+id/overview"
        android:layout_height="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>